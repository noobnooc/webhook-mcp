{
  "name": "webhook-mcp",
  "version": "0.0.5",
  "type": "module",
  "bin": {
    "webhook-mcp": "dist/index.js"
  },
  "scripts": {
    "build": "tsc",
    "inspector": "npx @modelcontextprotocol/inspector node dist/index.js",
    "publish": "npm run build && npm publish",
    "docker:build": "docker build -t webhook-mcp:latest .",
    "docker:test": "docker run -e WEBHOOK_URL=https://example.com webhook-mcp:latest",
    "docker:publish": "docker tag webhook-mcp:latest noobnooc/webhook-mcp:latest && docker tag webhook-mcp:latest noobnooc/webhook-mcp:0.0.4 && docker push noobnooc/webhook-mcp:latest && docker push noobnooc/webhook-mcp:0.0.4"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.10.2"
  },
  "devDependencies": {
    "@types/node": "^22.14.1",
    "typescript": "^5.8.3"
  }
}
